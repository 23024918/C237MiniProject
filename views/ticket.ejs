<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Ticket Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }

    .sidebar {
      width: 120px;
      height: 100vh;
      background-color: #d9d9d9;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .sidebar a {
      width: 80px;
      height: 80px;
      margin: 10px 0;
      background-color: #c4c4c4;
      color: black;
      text-align: center;
      line-height: 80px;
      text-decoration: none;
      border-radius: 10px;
      font-size: 0.8rem;
      font-weight: 500;
    }

    .sidebar a:hover {
      background-color: #b0b0b0;
    }

    .sidebar a:first-child {
      background-color: black;
      color: white;
    }

    .main-content {
      margin-left: 120px;
      padding: 40px;
    }

    .dashboard-box {
      background-color: #d9d9d9;
      border-radius: 20px;
      min-height: 100px;
      margin: 20px auto;
      width: 80%;
      padding: 25px;
    }

    .dashboard-box h4 {
      font-weight: bold;
      margin-bottom: 20px;
    }

    .dashboard-box p {
      margin-bottom: 10px;
    }

    .dashboard-box img {
      border-radius: 10px;
    }

    .back-btn {
      display: block;
      margin: 0 auto;
      margin-top: 20px;
      width: fit-content;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/">Home</a>
    <a href="/contact">Contact</a>
    <a href="/feedback">Feedback</a>
  </div>

  <!-- Ticket Details -->
  <div class="main-content">
    <% if (ticket) { %>
      <div class="dashboard-box">
        <h4 class="text-center">Ticket Details</h4>
        <p><b>Airline Name:</b> <%= ticket.airline_name %></p>
        <p><b>Logo Image:</b><br> 
          <img src="/images/<%= ticket.airline_logo %>" alt="Logo" width="20%">
        </p>
        <p><b>Departure City:</b> <%= ticket.departure_city %></p>
        <p><b>Arrival City:</b> <%= ticket.arrival_city %></p>
        <p><b>Departure Date:</b> 
          <% 
            var departure_date = new Date(ticket.departure_date);
            var formatteddeparture_date = ((departure_date.getMonth() + 1) + '').padStart(2, '0') + '/' + 
                                          (departure_date.getDate() + '').padStart(2, '0') + '/' + 
                                          departure_date.getFullYear();
          %>
          <%= formatteddeparture_date %>
        </p>
        <p><b>Departure Time:</b> <%= ticket.departure_time %></p>
        <p><b>Arrival Date:</b> 
          <% 
            var arrival_date = new Date(ticket.arrival_date);
            var formattedarrival_date = ((arrival_date.getMonth() + 1) + '').padStart(2, '0') + '/' + 
                                        (arrival_date.getDate() + '').padStart(2, '0') + '/' + 
                                        arrival_date.getFullYear();
          %>
          <%= formattedarrival_date %>
        </p>
        <p><b>Arrival Time:</b> <%= ticket.arrival_time %></p>
        <p><b>Price:</b> $<%= ticket.price %></p>
        <p><b>Referral URL:</b> 
          <a href="<%= ticket.referral_url %>" target="_blank">Ticket Website</a>
        </p>
      </div>
      <div class="text-center">
        <a href="/" class="btn btn-dark back-btn">Back to Home</a>
      </div>
    <% } else { %>
      <p class="text-center mt-5">No ticket found.</p>
    <% } %>
  </div>

</body>
</html>

